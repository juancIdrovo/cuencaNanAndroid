<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView para la foto del punto de interés -->
    <ImageView
        android:id="@+id/foto_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/nombre_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Punto de Interés"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/descripcion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Descripción del Punto de Interés"
        android:textSize="16sp"/>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:numStars="5"
        android:stepSize="1.0"/>

    <EditText
        android:id="@+id/comentario_edit_text"
        android:layout_width="381dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:hint="Agregar un comentario" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enviar" />
</LinearLayout>

