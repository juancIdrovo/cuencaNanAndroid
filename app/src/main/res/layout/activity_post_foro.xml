<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="257dp"
        android:layout_height="51dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:text="Publica lo que piensas"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/divider8"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Titulo"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="366dp" />

    <Button
        android:id="@+id/btnpost"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:text="Publicar"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="604dp" />

    <ImageView
        android:id="@+id/imagenpost"
        android:layout_width="214dp"
        android:layout_height="154dp"
        android:background="#000000"
        android:backgroundTint="#101010"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="128dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnimagen"
        android:layout_width="101dp"
        android:layout_height="57dp"
        android:text="Subir Imagen"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="169dp" />

    <EditText
        android:id="@+id/tvdescripcion"
        android:layout_width="349dp"
        android:layout_height="62dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="AÃ±ade una descripcion"
        android:inputType="textMultiLine"
        android:singleLine="true"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="472dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="139dp"
        android:layout_height="31dp"
        android:text="Imagen:"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="139dp"
        android:layout_height="31dp"
        android:text="Titulo:"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="179dp"
        android:layout_height="32dp"
        android:text="Cual es la descripcion:"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="434dp" />

    <View
        android:id="@+id/divider7"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="305dp" />

    <View
        android:id="@+id/divider8"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="63dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
