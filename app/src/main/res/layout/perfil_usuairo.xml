<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1">


    <Button
        android:id="@+id/btnForo"
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:layout_below="@id/btnPuntosInteres"
        android:layout_alignParentStart="true"
        android:layout_marginStart="241dp"
        android:layout_marginTop="-101dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/foro"
        android:text="Foro"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnVerUbicaciones"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnForo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/mapa"
        android:drawablePadding="10dp"
        android:text="Mi Mapa"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPuntosInteres"
        android:layout_width="201dp"
        android:layout_height="106dp"
        android:layout_below="@id/tvMail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/mundo"
        android:text="Puntos de Interes"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEventos"
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:layout_below="@id/btnForo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/evento"
        android:text="Eventos"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnOptions"
        android:layout_width="43dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:contentDescription="BotÃ³n de opciones"
        android:src="@drawable/opcion64" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="200dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="88dp"
        android:src="@drawable/luffiperfil"
        app:civ_border_color="@color/maradito"
        app:civ_border_width="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="309dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="279dp"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:breakStrategy="high_quality"
        android:capitalize="characters"
        android:foregroundTint="@color/white"

        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHighlight="#C51E1E"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvMail"
        android:layout_width="312dp"
        android:layout_height="37dp"
        android:layout_below="@+id/tvName"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/white"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic" />

</RelativeLayout>