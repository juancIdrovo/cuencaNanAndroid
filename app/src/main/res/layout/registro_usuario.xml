<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoblanco">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Campo cedula -->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewfoto"
            android:layout_width="132dp"
            android:layout_height="118dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/usuario"
            app:civ_border_color="@color/black"
            app:civ_border_width="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.836"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ingresa tus datos"
            android:textColor="@color/maradito"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutCedula"
            android:layout_width="201dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtcedula"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Cédula"
                android:tooltipText="Ingresa tu cédula"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo nombres -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutNombres"
            android:layout_width="201dp"
            android:layout_height="61dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCedula">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtnombres"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:tooltipText="Ingresa tus nombres"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo apellidos -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutApellidos"
            android:layout_width="201dp"
            android:layout_height="61dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutNombres">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtapellidos"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:tooltipText="Ingresa tus apellidos"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo correo -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutCorreo"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutApellidos">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtcorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:hint="Correo"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:tooltipText="Ingresa tu correo" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo confirmar correo -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutConfirmCorreo"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCorreo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtConfirmCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:hint="Confirmar Correo"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:tooltipText="Confirma tu correo" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo dirección -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutConfirmCorreo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtdireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:hint="Dirección"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:tooltipText="Ingresa tu dirección" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutContrasena"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDireccion">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtContrasena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:tooltipText="Ingresa tu contraseña, Minimo 8 caracteres, Mayúsculas, Minúsculas y Números" />


        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo confirmar contraseña -->

        <ImageView
            android:id="@+id/imgTogglePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="280dp"
            android:contentDescription=""
            android:onClick="togglePasswordVisibility"
            android:src="@drawable/ic_aye"
            android:tooltipText="Mostrar/Ocultar contraseña"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutContrasena"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.617" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutConfirmContrasena"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutContrasena">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtConfirmContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirmar Contraseña"
                android:tooltipText="Confirma tu contraseña"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ImageView para mostrar/ocultar contraseña -->

        <!-- Campo teléfono -->



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTelf"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutConfirmContrasena">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txttelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:tooltipText="Ingresa tu teléfono"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_text_field"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo fecha de nacimiento -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutFechaNac"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutTelf">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtFechaNac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@drawable/rounded_text_field"
                android:hint="Fecha de Nacimiento"
                android:tooltipText="Ingresa tu fecha de nacimiento"
                android:layout_marginLeft="10dp"
                android:inputType="date"
                android:onClick="showDatePickerDialog"
                android:textSize="15sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones de guardar y cancelar -->

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:onClick="clickbtnGuardar"
            android:text="Guardar"
            android:textSize="17sp"
            android:textStyle="bold"
            android:tooltipText="Crear nuevo perfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutFechaNac" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:text="Cancelar"
            android:textSize="17sp"
            android:textStyle="bold"
            android:tooltipText="Cancelar "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnGuardar"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutFechaNac" />

        <Button
            android:id="@+id/btnSeleccionarFoto"
            android:layout_width="106dp"
            android:layout_height="41dp"
            android:layout_marginTop="12dp"
            android:text="Foto"
            android:tooltipText="Seleciona tu foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.79"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutApellidos"
            app:layout_constraintTop_toBottomOf="@+id/imageViewfoto" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutEstudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutFechaNac"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEstudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="estudiante"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:enabled="false"
                android:focusable="false"
                android:background="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
